<% layout('./boilerplate') -%>

<link rel="stylesheet" href="/css/results.css" />
<link rel="stylesheet" href="/css/loader.css" />

<h1>Spotify Now</h1>
<h2>Welcome, <%= user.username %></h2>
<div class="btnDiv">
    <div class="searchDiv">
        <input type="search" name="q" id="search" placeholder="Search" />
        <input
            type="radio"
            name="searchType"
            id="tracks"
            value="track"
            checked
        />
        <label for="tracks">Tracks</label>
        <input type="radio" name="searchType" id="artists" value="artist" />
        <label for="artists">Artists</label>
    </div>
    <button class="btn btn-primary getAlbums">Show my saved albums</button>
    <button class="btn btn-primary getPlaylists">
        Show my saved Playlists
    </button>
    <button class="btn btn-warning logout">Logout</button>
</div>
<ul class="search_results"></ul>

<div id="floatingBarsG">
    <div class="blockG" id="rotateG_01"></div>
    <div class="blockG" id="rotateG_02"></div>
    <div class="blockG" id="rotateG_03"></div>
    <div class="blockG" id="rotateG_04"></div>
    <div class="blockG" id="rotateG_05"></div>
    <div class="blockG" id="rotateG_06"></div>
    <div class="blockG" id="rotateG_07"></div>
    <div class="blockG" id="rotateG_08"></div>
</div>
<div class="spotifyEmbededPlayerWrapper">
    <div class="arrowWrapper">
        <i class="arrow"></i>
    </div>
    <iframe
        class="spotifyEmbededPlayer"
        frameborder="0"
        allowtransparency="true"
        allow="encrypted-media"
    ></iframe>
</div>
<script src="/js/1_components.js"></script>
<script src="/js/2_functions.js"></script>
<script src="/js/3_script.js"></script>
